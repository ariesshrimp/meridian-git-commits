{
  "name": "cz-meridian",
  "version": "0.0.1",
  "description": "A standard commit validator for Meridian projects.",
  "main": "index.js",
  "license": "MIT",
  "bin": "index.js",
  "dependencies": {
    "commitizen": "2.9.6",
    "conventional-github-releaser": "1.1.3",
    "cz-conventional-changelog": "*",
    "github-api": "3.0.0",
    "github-remove-all-releases": "1.0.1",
    "husky": "0.13.2",
    "ramda": "0.23.0",
    "shelljs": "0.7.7",
    "standard-version": "4.0.0"
  },
  "scripts": {
    "commit": "git cz",
    "build": "babel src --watch --out-dir dist --presets=es2015,stage-0 --plugins=transform-runtime",
    "test": "git log",
    "release": "standard-version && node dist/post-version.js && git checkout - && git pull --rebase",
    "reset": "rm CHANGELOG.md && node dist/reset-releases.js && rm -rf .git && git init && git remote add origin git@github.com:joefraley/meridian-git-commits.git"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joefraley/meridian-git-commits.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "babel-preset-es2015": "6.24.0",
    "babel-preset-stage-0": "6.22.0"
  }
}